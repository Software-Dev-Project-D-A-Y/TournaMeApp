<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".app.activity.PlayerDashboardActivity"
    android:background="@drawable/two_layer_color">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="550dp"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="120dp"
            android:layout_height="92dp"
            app:srcCompat="@drawable/the_logo" />

        <TextView
            android:id="@+id/playerTextView"
            android:layout_width="99dp"
            android:layout_height="54dp"
            android:gravity="center"
            android:text="PLAYER"
            android:textStyle="bold|italic" />

        <Button
            android:id="@+id/pMyRequestsBtn"
            android:layout_width="wrap_content"
            android:layout_height="49dp"
            android:background="@drawable/shape"
            android:padding="10dp"
            android:text="My Requests" />

        <Button
            android:id="@+id/pMyTournamentsBtn"
            android:layout_width="wrap_content"
            android:layout_height="41dp"
            android:background="@drawable/shape"
            android:padding="10dp"
            android:text="My Tournaments" />

        <Button
            android:id="@+id/pJoinTournamentBtn"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/shape"
            android:padding="10dp"
            android:text="@string/join_tournament" />

        <Button
            android:id="@+id/pLogoutBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/shape"
            android:padding="10dp"
            android:text="Log Out" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>